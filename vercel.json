{
    "installCommand": "npm install && cd client && npm install",
    "buildCommand": "cd client && npm run build",
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "cleanUrls": true,
    "functions": {
        "api/[...route].ts": {
            "maxDuration": 60
        }
    }
}